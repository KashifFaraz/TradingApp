@{
    ViewData["Title"] = "Upload Image for OCR";
}

<h2>Upload Image for OCR</h2>
<form asp-controller="Ocr" asp-action="ExtractText" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="uploadedImage">Select Image</label>
        <input type="file" name="uploadedImage" class="form-control" />
        <select name="actiontype" class="form-control">
            <option value="OCR">OCR</option>
            <option value="Parse">Parse</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Extract Text</button>
</form>

        @foreach (var item in (IEnumerable<Item>)ViewData["Item"])
        {
                                                                                    <option data-price="@item.Price" data-SaleUnitId="@item.SaleUnit" data-SaleUnit="@item.SaleUnitNavigation.Symbol" value="@item.Id">@item.Name</option>
        }
                                                        </select>

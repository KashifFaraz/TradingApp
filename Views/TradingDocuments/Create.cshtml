        //var existingData = @Html.Raw(Json.Serialize(Model?.TradingDocumentDetails));

        // for (const item of existingData.$values) {
        //     addTradingDocumentDetail(item.description, item.itemId, item.unitPrice, item.quantity, item.amount);
        // }

        window.addEventListener('DOMContentLoaded', (event) => {
            var jsVariable = "selectedValue"; // Replace with your JavaScript variable
            var selectElement = document.getElementById('itemSelect');
            var options = selectElement.options;
            for (var i = 0; i < options.length; i++) {
                if (options[i].value === jsVariable) {
                    options[i].setAttribute('selected', 'selected');
                    break;
                }
            }
        });

    </script>






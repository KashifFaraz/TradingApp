@model IEnumerable<TradingApp.Models.ProductBrand>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}



<p>
    <a href="#" id="createButton">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EditedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EditedOn)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="#" class="deleteRecordLink" data-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#createButton').click(function (e) {
            e.preventDefault();
            $('.tabData').html('');
            $.get('/ProductCategories/Create')
                .done(function (data) {
                    $('#SettingContent').html(data);
                })
                .fail(function (jqXHR, textStatus, errorThrown) {
                    console.error("Request failed: " + textStatus + ", " + errorThrown);
                    //  $('#SettingContent').html('<p>Error loading content. Please try again later.</p>');
                    $('#SettingContent').html(jqXHR.responseText);
                });
        });



        $('.deleteRecordLink').click(function (e) {
            e.preventDefault();
            $('.tabData').html('');
            var recordId = $(this).data('id');

            $.get('/ProductCategories/Delete/' + recordId, function (data) {
                $('#SettingContent').html(data);
            });
        });
    });
</script>
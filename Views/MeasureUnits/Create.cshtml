@model TradingApp.Models.MeasureUnit

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<h1>Create</h1>

<h4>MeasureUnit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "MeasureUnits", FormMethod.Post, new { id = "createForm" }))
    {
        @* <form asp-action="Create"> *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        @* </form> *@
        }
    </div>
</div>
<div id="resultContainer"></div>
<div>
    <a href="#" id="listMeasurementUnit">Back to List</a>
    @* <a asp-action="Index">Back to List</a> *@
</div>
<script>

    

    $(document).ready(function () {

        $('#listMeasurementUnit').click(function (e) {
            e.preventDefault(); // Prevent the default anchor behavior

            $.get('/MeasureUnits/index', function (data) {
                $('#MeasurementUnitDiv').html(data);
            });
        });

        $('#createForm').submit(function (e) {
            e.preventDefault(); // Prevent the default form submission

            $.ajax({
                type: "POST",
                url: $(this).attr('action'),
                data: $(this).serialize(), // Serialize the form data
                success: function (response) {
                    // Handle the response (e.g., show a success message, clear the form, etc.)
                    $('#resultContainer').html('<div class="alert alert-success">Record created successfully!</div>');
                },
                error: function (xhr, status, error) {
                    // Handle any errors
                    $('#resultContainer').html('<div class="alert alert-danger">Error: ' + error + '</div>');
                }
            });
        });
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

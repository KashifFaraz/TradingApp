@section Scripts {
    <script>
        //Add first row
        addTradingDocumentDetail();
        // Global variable to keep track of the current index
        var currentIndex = 0;

        // JavaScript function to add a new row for TradingDocumentDetails

        function addTradingDocumentDetail() {
            var container = document.getElementById('tradingDocumentDetailsContainer');
            var newRow = document.createElement('div');
            newRow.className = 'row';
            newRow.innerHTML = `
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th>Item</th>
                                            <th>Unit Price</th>
                                            <th>Quantity</th>
                                            <th>Amount</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="form-group">
                                                    <label asp-for="TradingDocumentDetails[${currentIndex}].Description" class="control-label"></label>
                                                    <input name="TradingDocumentDetails[${currentIndex}].Description" class="form-control" />
                                                    <span asp-validation-for="TradingDocumentDetails[${currentIndex}].Description" class="text-danger"></span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <label asp-for="TradingDocumentDetails[${currentIndex}].ItemId" class="control-label"></label>
                                                    <select name="TradingDocumentDetails[${currentIndex}].ItemId" class="form-control">
                                                        <option value="">-- Select Item --</option>
        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Item"])
        {
                                                              <option value="@item.Value">@item.Text</option>
        }
                                                    </select>
                                                    <span asp-validation-for="TradingDocumentDetails[${currentIndex}].ItemId" class="text-danger"></span>
                                                </div>
                                            </td>
                                            <td>
                                                <!-- Add more form fields for TradingDocumentDetails as needed -->
                                                <div class="form-group">
                                                    <label asp-for="TradingDocumentDetails[${currentIndex}].UnitPrice" class="control-label"></label>
                                                    <input name="TradingDocumentDetails[${currentIndex}].UnitPrice" class="form-control" oninput="calculateAmount(${currentIndex})" />
                                                    <span asp-validation-for="TradingDocumentDetails[${currentIndex}].UnitPrice" class="text-danger"></span>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="form-group">
                                                    <label asp-for="TradingDocumentDetails[${currentIndex}].Quantity" class="control-label"></label>
                                                    <input name="TradingDocumentDetails[${currentIndex}].Quantity" class="form-control" oninput="calculateAmount(${currentIndex})" />
                                                    <span asp-validation-for="TradingDocumentDetails[${currentIndex}].Quantity" class="text-danger"></span>
                                                </div>
                                            </td>
                                             <td>
                                                <div class="form-group">
                                                    <label asp-for="TradingDocumentDetails[${currentIndex}].Amount" class="control-label"></label>
                                                    <input name="TradingDocumentDetails[${currentIndex}].Amount" class="form-control" readonly  />
                                                    <span asp-validation-for="TradingDocumentDetails[${currentIndex}].Amount" class="text-danger"></span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-group">
                                                    <button type="button" class="btn btn-danger" onclick="removeTradingDocumentDetail(this)">Remove Row</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            `;
            container.appendChild(newRow);

            // Increment the index for the next row
            currentIndex++;
        }

        // JavaScript function to remove a row for TradingDocumentDetails
        function removeTradingDocumentDetail(button) {
            var row = button.parentNode.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        // Function to calculate Amount based on UnitPrice and Quantity
        function calculateAmount(index) {
            var unitPrice = parseFloat(document.getElementsByName(`TradingDocumentDetails[${index}].UnitPrice`)[0].value) || 0;
            var quantity = parseFloat(document.getElementsByName(`TradingDocumentDetails[${index}].Quantity`)[0].value) || 0;
            var amount = unitPrice * quantity;
            document.getElementsByName(`TradingDocumentDetails[${index}].Amount`)[0].value = amount.toFixed(2);
        }

